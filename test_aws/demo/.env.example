# Wildlife Gallery Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000

# Session secret - CHANGE THIS to a random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=change-this-to-a-random-secret-key

# OpenAI API Key (optional - for chat feature)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# PostgreSQL Configuration
# For local development:
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=wildlife_gallery
PG_USER=postgres
PG_PASSWORD=your-postgres-password

# For AWS RDS:
# PG_HOST=your-instance.region.rds.amazonaws.com
# PG_PORT=5432
# PG_DATABASE=wildlife_gallery
# PG_USER=postgres
# PG_PASSWORD=your-rds-password

# Redis Configuration
# For local development:
REDIS_URL=redis://localhost:6379

# For AWS ElastiCache:
# REDIS_URL=redis://your-cluster.region.cache.amazonaws.com:6379
