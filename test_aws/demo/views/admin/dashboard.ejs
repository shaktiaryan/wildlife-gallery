<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #2d5016;
      --secondary-color: #4a7c23;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
      min-height: 100vh;
    }
    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/gallery"><i class="bi bi-tree me-2"></i>Wildlife Gallery</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/gallery"><i class="bi bi-grid me-1"></i>Gallery</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/health"><i class="bi bi-heart-pulse me-1"></i>Health</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/logs"><i class="bi bi-list-ul me-1"></i>Logs</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="bi bi-people me-1"></i>Users</a></li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i><%= user.username %>
            <span class="badge bg-warning text-dark ms-1">Admin</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i><%= success %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show"><i class="bi bi-exclamation-circle me-2"></i><%= error %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h1>
      <p class="text-muted mb-0">Overview of your Wildlife Gallery</p>
    </div>
    <div class="text-muted small">Last refreshed: <%= new Date().toLocaleString() %></div>
  </div>

  <!-- Stats Cards -->
  <div class="row g-3 mb-4">
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-people fs-2 text-primary"></i>
          <h3 class="mb-0 mt-2"><%= stats.user_count %></h3>
          <small class="text-muted">Users</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-folder fs-2 text-success"></i>
          <h3 class="mb-0 mt-2"><%= stats.category_count %></h3>
          <small class="text-muted">Categories</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-bug fs-2 text-warning"></i>
          <h3 class="mb-0 mt-2"><%= stats.creature_count %></h3>
          <small class="text-muted">Creatures</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-chat-dots fs-2 text-info"></i>
          <h3 class="mb-0 mt-2"><%= stats.feedback_count %></h3>
          <small class="text-muted">Feedback</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-image fs-2 text-danger"></i>
          <h3 class="mb-0 mt-2"><%= stats.image_count %></h3>
          <small class="text-muted">Images</small>
        </div>
      </div>
    </div>
    <div class="col-6 col-md-4 col-lg-2">
      <div class="card text-center h-100 border-0 shadow-sm">
        <div class="card-body py-3">
          <i class="bi bi-activity fs-2 text-secondary"></i>
          <h3 class="mb-0 mt-2"><%= stats.log_count %></h3>
          <small class="text-muted">Logs</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <!-- Activity Overview -->
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Activity Overview (7 Days)</h5>
        </div>
        <div class="card-body">
          <% if (activityStats && activityStats.totals) { %>
          <div class="row text-center mb-4">
            <div class="col-6">
              <h2 class="text-primary"><%= activityStats.totals.total_activities || 0 %></h2>
              <small class="text-muted">Total Activities</small>
            </div>
            <div class="col-6">
              <h2 class="text-success"><%= activityStats.totals.unique_users || 0 %></h2>
              <small class="text-muted">Active Users</small>
            </div>
          </div>
          <% } %>

          <h6 class="text-muted mb-3">Top Actions</h6>
          <% if (activityStats && activityStats.topActions && activityStats.topActions.length > 0) { %>
            <% activityStats.topActions.slice(0, 5).forEach(function(action) { %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="small text-truncate" style="max-width: 70%;"><%= action.action %></span>
                <span class="badge bg-secondary"><%= action.count %></span>
              </div>
            <% }); %>
          <% } else { %>
            <p class="text-muted small">No activity data yet</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Active Users -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>Most Active Users</h5>
        </div>
        <div class="card-body">
          <% if (activityStats && activityStats.activeUsers && activityStats.activeUsers.length > 0) { %>
            <% activityStats.activeUsers.forEach(function(u) { %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-person me-1"></i><%= u.username %></span>
                <span class="badge bg-primary"><%= u.activity_count %> actions</span>
              </div>
            <% }); %>
          <% } else { %>
            <p class="text-muted small">No activity data yet</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity & Seed Data -->
  <div class="row g-4 mt-2">
    <!-- Recent Activity -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Activity</h5>
          <a href="/admin/logs" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <% if (recentLogs && recentLogs.length > 0) { %>
              <% recentLogs.forEach(function(log) { %>
                <div class="list-group-item d-flex justify-content-between align-items-center py-2">
                  <div>
                    <small class="text-muted"><%= log.username || 'System' %></small>
                    <br>
                    <span class="small"><%= log.action %></span>
                  </div>
                  <small class="text-muted"><%= new Date(log.created_at).toLocaleTimeString() %></small>
                </div>
              <% }); %>
            <% } else { %>
              <div class="list-group-item text-muted">No recent activity</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Seed Data Controls -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0"><i class="bi bi-database me-2"></i>Database Seeding</h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-12">
              <form action="/admin/seed/add" method="POST">
                <button type="submit" class="btn btn-success w-100">
                  <i class="bi bi-plus-circle me-1"></i>Add Missing Sample Data
                </button>
              </form>
              <small class="text-muted">Adds missing creatures without deleting existing data</small>
            </div>
            <div class="col-12">
              <form action="/admin/seed/reset" method="POST" onsubmit="return confirm('WARNING: This will delete all creatures, categories, and feedback. Continue?');">
                <button type="submit" class="btn btn-outline-danger w-100">
                  <i class="bi bi-arrow-clockwise me-1"></i>Reset & Seed Fresh Data
                </button>
              </form>
              <small class="text-danger">Deletes all data and repopulates with samples</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="text-center py-3 mt-4" style="background: #1a1a2e; color: #aaa;">
  <p class="mb-0 small">Wildlife Gallery Admin Dashboard</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
