<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #2d5016;
      --secondary-color: #4a7c23;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
      min-height: 100vh;
    }
    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/gallery"><i class="bi bi-tree me-2"></i>Wildlife Gallery</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/gallery"><i class="bi bi-grid me-1"></i>Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/health"><i class="bi bi-heart-pulse me-1"></i>Health</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/logs"><i class="bi bi-list-ul me-1"></i>Logs</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/users"><i class="bi bi-people me-1"></i>Users</a></li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i><%= user.username %>
            <span class="badge bg-warning text-dark ms-1">Admin</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i><%= success %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show"><i class="bi bi-exclamation-circle me-2"></i><%= error %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-people me-2"></i>User Management</h1>
      <p class="text-muted mb-0">Manage user accounts and admin rights</p>
    </div>
    <span class="badge bg-primary fs-6"><%= users.length %> Users</span>
  </div>

  <!-- Stats -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-primary"><%= users.length %></h3>
          <small class="text-muted">Total Users</small>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-warning"><%= users.filter(function(u) { return u.is_admin; }).length %></h3>
          <small class="text-muted">Admins</small>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-success"><%= users.filter(function(u) { return !u.is_admin; }).length %></h3>
          <small class="text-muted">Regular Users</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Users Table -->
  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Email</th>
              <th>Role</th>
              <th>Feedback</th>
              <th>Last Active</th>
              <th>Joined</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(u) { %>
              <tr class="<%= u.id === user.id ? 'table-info' : '' %>">
                <td><%= u.id %></td>
                <td>
                  <i class="bi bi-person-circle me-1"></i>
                  <strong><%= u.username %></strong>
                  <% if (u.id === user.id) { %>
                    <span class="badge bg-info ms-1">You</span>
                  <% } %>
                </td>
                <td><small><%= u.email %></small></td>
                <td>
                  <% if (u.is_admin) { %>
                    <span class="badge bg-warning text-dark"><i class="bi bi-shield-check me-1"></i>Admin</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><i class="bi bi-person me-1"></i>User</span>
                  <% } %>
                </td>
                <td><span class="badge bg-info"><%= u.feedback_count || 0 %></span></td>
                <td>
                  <% if (u.last_active) { %>
                    <small class="text-muted"><%= new Date(u.last_active).toLocaleDateString() %></small>
                  <% } else { %>
                    <small class="text-muted">Never</small>
                  <% } %>
                </td>
                <td><small class="text-muted"><%= new Date(u.created_at).toLocaleDateString() %></small></td>
                <td>
                  <% if (u.id !== user.id) { %>
                    <% if (u.is_admin) { %>
                      <form action="/admin/users/<%= u.id %>/revoke-admin" method="POST" class="d-inline"
                            onsubmit="return confirm('Revoke admin rights from <%= u.username %>?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Revoke Admin">
                          <i class="bi bi-shield-x"></i>
                        </button>
                      </form>
                    <% } else { %>
                      <form action="/admin/users/<%= u.id %>/make-admin" method="POST" class="d-inline"
                            onsubmit="return confirm('Make <%= u.username %> an admin?');">
                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Make Admin">
                          <i class="bi bi-shield-plus"></i>
                        </button>
                      </form>
                    <% } %>
                  <% } else { %>
                    <small class="text-muted">-</small>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Legend -->
  <div class="mt-3 text-muted small">
    <i class="bi bi-shield-plus text-warning me-1"></i> Make Admin &nbsp;|&nbsp;
    <i class="bi bi-shield-x text-danger me-1"></i> Revoke Admin
  </div>
</div>

<footer class="text-center py-3 mt-4" style="background: #1a1a2e; color: #aaa;">
  <p class="mb-0 small">Wildlife Gallery Admin - User Management</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
