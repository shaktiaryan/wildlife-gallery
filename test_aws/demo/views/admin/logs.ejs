<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Activity Logs | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #2d5016;
      --secondary-color: #4a7c23;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
      min-height: 100vh;
    }
    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/gallery"><i class="bi bi-tree me-2"></i>Wildlife Gallery</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/gallery"><i class="bi bi-grid me-1"></i>Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/health"><i class="bi bi-heart-pulse me-1"></i>Health</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/logs"><i class="bi bi-list-ul me-1"></i>Logs</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="bi bi-people me-1"></i>Users</a></li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i><%= user.username %>
            <span class="badge bg-warning text-dark ms-1">Admin</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i><%= success %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show"><i class="bi bi-exclamation-circle me-2"></i><%= error %><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-list-ul me-2"></i>Activity Logs</h1>
      <p class="text-muted mb-0">Track user actions and system events</p>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-outline-primary" onclick="location.reload()">
        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
      </button>
      <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cleanLogsModal">
        <i class="bi bi-trash me-1"></i>Clean Old
      </button>
    </div>
  </div>

  <!-- Stats Summary -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-primary"><%= pagination.totalLogs %></h3>
          <small class="text-muted">Total Logs</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-success"><%= activityStats && activityStats.totals ? activityStats.totals.total_activities : 0 %></h3>
          <small class="text-muted">Last 7 Days</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-info"><%= activityStats && activityStats.totals ? activityStats.totals.unique_users : 0 %></h3>
          <small class="text-muted">Active Users (7d)</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body py-3">
          <h3 class="mb-0 text-warning"><%= pagination.totalPages %></h3>
          <small class="text-muted">Total Pages</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Logs Table -->
  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Time</th>
              <th>User</th>
              <th>Action</th>
              <th>Details</th>
              <th>IP Address</th>
            </tr>
          </thead>
          <tbody>
            <% if (logs && logs.length > 0) { %>
              <% logs.forEach(function(log) { %>
                <tr>
                  <td class="text-nowrap">
                    <small><%= new Date(log.created_at).toLocaleDateString() %></small><br>
                    <small class="text-muted"><%= new Date(log.created_at).toLocaleTimeString() %></small>
                  </td>
                  <td>
                    <% if (log.username) { %>
                      <i class="bi bi-person me-1"></i><%= log.username %>
                    <% } else { %>
                      <span class="text-muted">System</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (log.action.startsWith('ADMIN_')) { %>
                      <span class="badge bg-warning text-dark"><%= log.action %></span>
                    <% } else if (log.action.startsWith('GET')) { %>
                      <span class="badge bg-info"><%= log.action %></span>
                    <% } else if (log.action.startsWith('POST')) { %>
                      <span class="badge bg-success"><%= log.action %></span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= log.action %></span>
                    <% } %>
                  </td>
                  <td>
                    <% if (log.details) { %>
                      <small class="text-muted"><%= log.details %></small>
                    <% } else { %>
                      <small class="text-muted">-</small>
                    <% } %>
                  </td>
                  <td><small class="text-muted"><%= log.ip_address || '-' %></small></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center text-muted py-4">No logs found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
    <div class="card-footer bg-white">
      <nav>
        <ul class="pagination mb-0 justify-content-center">
          <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= pagination.page - 1 %>">Previous</a>
          </li>
          <% for (var i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.totalPages, pagination.page + 2); i++) { %>
            <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="?page=<%= pagination.page + 1 %>">Next</a>
          </li>
        </ul>
      </nav>
    </div>
    <% } %>
  </div>
</div>

<!-- Clean Logs Modal -->
<div class="modal fade" id="cleanLogsModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Clean Old Logs</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/admin/logs/clean" method="POST">
        <div class="modal-body">
          <p>Delete activity logs older than:</p>
          <select name="days" class="form-select">
            <option value="7">7 days</option>
            <option value="14">14 days</option>
            <option value="30" selected>30 days</option>
            <option value="60">60 days</option>
            <option value="90">90 days</option>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Delete Logs</button>
        </div>
      </form>
    </div>
  </div>
</div>

<footer class="text-center py-3 mt-4" style="background: #1a1a2e; color: #aaa;">
  <p class="mb-0 small">Wildlife Gallery Admin - Activity Logs</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
