<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>System Health | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #2d5016;
      --secondary-color: #4a7c23;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
      min-height: 100vh;
    }
    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/gallery"><i class="bi bi-tree me-2"></i>Wildlife Gallery</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/gallery"><i class="bi bi-grid me-1"></i>Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/health"><i class="bi bi-heart-pulse me-1"></i>Health</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/logs"><i class="bi bi-list-ul me-1"></i>Logs</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="bi bi-people me-1"></i>Users</a></li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle me-1"></i><%= user.username %>
            <span class="badge bg-warning text-dark ms-1">Admin</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-heart-pulse me-2"></i>System Health</h1>
      <p class="text-muted mb-0">Monitor application and database health</p>
    </div>
    <button class="btn btn-outline-primary" onclick="location.reload()">
      <i class="bi bi-arrow-clockwise me-1"></i>Refresh
    </button>
  </div>

  <div class="row g-4">
    <!-- PostgreSQL Health -->
    <div class="col-md-6 col-lg-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="bi bi-database me-2"></i>PostgreSQL</h5>
          <span class="badge <%= pgHealth.status === 'healthy' ? 'bg-success' : 'bg-danger' %>">
            <%= pgHealth.status === 'healthy' ? 'Healthy' : 'Error' %>
          </span>
        </div>
        <div class="card-body">
          <% if (pgHealth.status === 'healthy') { %>
            <table class="table table-sm table-borderless mb-0">
              <tr><td class="text-muted">Version</td><td class="text-end"><%= pgHealth.version %></td></tr>
              <tr><td class="text-muted">Latency</td><td class="text-end"><%= pgHealth.latency %></td></tr>
              <tr><td class="text-muted">DB Size</td><td class="text-end"><%= pgHealth.dbSize %></td></tr>
              <tr><td class="text-muted">Pool Total</td><td class="text-end"><%= pgHealth.poolStats ? pgHealth.poolStats.total : 'N/A' %></td></tr>
              <tr><td class="text-muted">Pool Idle</td><td class="text-end"><%= pgHealth.poolStats ? pgHealth.poolStats.idle : 'N/A' %></td></tr>
              <tr><td class="text-muted">Pool Waiting</td><td class="text-end"><%= pgHealth.poolStats ? pgHealth.poolStats.waiting : 'N/A' %></td></tr>
            </table>
          <% } else { %>
            <p class="text-danger mb-0"><%= pgHealth.message %></p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Redis Health -->
    <div class="col-md-6 col-lg-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Redis Cache</h5>
          <span class="badge <%= redisHealth.status === 'healthy' ? 'bg-success' : 'bg-warning' %>">
            <%= redisHealth.status === 'healthy' ? 'Healthy' : 'Offline' %>
          </span>
        </div>
        <div class="card-body">
          <% if (redisHealth.status === 'healthy') { %>
            <table class="table table-sm table-borderless mb-0">
              <tr><td class="text-muted">Latency</td><td class="text-end"><%= redisHealth.latency %></td></tr>
              <tr><td class="text-muted">Cached Images</td><td class="text-end"><%= redisHealth.cachedImages %></td></tr>
              <tr><td class="text-muted">Memory Used</td><td class="text-end"><%= redisHealth.memoryUsed %></td></tr>
            </table>
          <% } else { %>
            <p class="text-warning mb-0"><%= redisHealth.message || 'Redis is not connected' %></p>
            <small class="text-muted">Image caching is disabled</small>
          <% } %>
        </div>
      </div>
    </div>

    <!-- System Info -->
    <div class="col-md-6 col-lg-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="bi bi-cpu me-2"></i>System</h5>
          <span class="badge bg-success">Online</span>
        </div>
        <div class="card-body">
          <table class="table table-sm table-borderless mb-0">
            <tr><td class="text-muted">Platform</td><td class="text-end"><%= systemHealth.platform %> (<%= systemHealth.arch %>)</td></tr>
            <tr><td class="text-muted">Node.js</td><td class="text-end"><%= systemHealth.nodeVersion %></td></tr>
            <tr><td class="text-muted">System Uptime</td><td class="text-end"><%= systemHealth.uptime %></td></tr>
            <tr><td class="text-muted">App Uptime</td><td class="text-end"><%= systemHealth.processUptime %></td></tr>
            <tr><td class="text-muted">CPU Cores</td><td class="text-end"><%= systemHealth.cpuCores %></td></tr>
          </table>
        </div>
      </div>
    </div>

    <!-- Memory Usage -->
    <div class="col-md-6 col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="bi bi-memory me-2"></i>Memory Usage</h5>
        </div>
        <div class="card-body">
          <h6 class="text-muted">System Memory</h6>
          <div class="progress mb-2" style="height: 25px;">
            <% var memPercent = systemHealth.memoryUsage.usedPercent; %>
            <div class="progress-bar <%= memPercent > 80 ? 'bg-danger' : memPercent > 60 ? 'bg-warning' : 'bg-success' %>"
                 style="width: <%= memPercent %>%">
              <%= memPercent %>%
            </div>
          </div>
          <small class="text-muted">
            Used: <%= systemHealth.memoryUsage.used %> / Total: <%= systemHealth.memoryUsage.total %> (Free: <%= systemHealth.memoryUsage.free %>)
          </small>

          <h6 class="text-muted mt-4">Process Memory</h6>
          <table class="table table-sm table-borderless mb-0">
            <tr><td class="text-muted">Heap Used</td><td class="text-end"><%= systemHealth.processMemory.heapUsed %></td></tr>
            <tr><td class="text-muted">Heap Total</td><td class="text-end"><%= systemHealth.processMemory.heapTotal %></td></tr>
            <tr><td class="text-muted">RSS</td><td class="text-end"><%= systemHealth.processMemory.rss %></td></tr>
          </table>
        </div>
      </div>
    </div>

    <!-- Quick Health APIs -->
    <div class="col-md-6 col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="bi bi-link-45deg me-2"></i>Health Endpoints</h5>
        </div>
        <div class="card-body">
          <p class="text-muted small">Use these endpoints for load balancer health checks:</p>
          <div class="list-group list-group-flush">
            <a href="/health" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between">
              <code>/health</code>
              <span class="badge bg-primary">Basic</span>
            </a>
            <a href="/health/ready" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between">
              <code>/health/ready</code>
              <span class="badge bg-info">Readiness</span>
            </a>
            <a href="/health/live" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between">
              <code>/health/live</code>
              <span class="badge bg-success">Liveness</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="text-center py-3 mt-4" style="background: #1a1a2e; color: #aaa;">
  <p class="mb-0 small">Wildlife Gallery Admin - System Health</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
