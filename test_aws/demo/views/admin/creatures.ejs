<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .creature-img { width: 60px; height: 60px; object-fit: cover; border-radius: 8px; }
    .table-actions { white-space: nowrap; }
  </style>
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand" href="/gallery"><i class="bi bi-tree"></i> Wildlife Gallery</a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/admin">Dashboard</a>
        <a class="nav-link active" href="/admin/creatures">Creatures</a>
        <a class="nav-link" href="/admin/users">Users</a>
        <a class="nav-link" href="/gallery">View Site</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="bi bi-list-ul"></i> Manage Creatures</h2>
      <div>
        <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#categoryModal">
          <i class="bi bi-folder-plus"></i> Add Category
        </button>
        <a href="/admin/creatures/new" class="btn btn-success">
          <i class="bi bi-plus-lg"></i> Add Creature
        </a>
      </div>
    </div>

    <div class="card">
      <div class="card-header bg-white">
        <strong><%= creatures.length %></strong> creatures in database
      </div>
      <div class="card-body p-0">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 70px;">Image</th>
              <th>Name</th>
              <th>Scientific Name</th>
              <th>Category</th>
              <th>Conservation</th>
              <th style="width: 150px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (creatures.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center py-4 text-muted">
                  No creatures found. <a href="/admin/creatures/new">Add one now</a>
                </td>
              </tr>
            <% } else { %>
              <% creatures.forEach(creature => { %>
                <tr>
                  <td>
                    <% if (creature.image_url) { %>
                      <img src="<%= creature.image_url %>" alt="<%= creature.name %>" class="creature-img">
                    <% } else { %>
                      <div class="creature-img bg-secondary d-flex align-items-center justify-content-center text-white">
                        <i class="bi bi-image"></i>
                      </div>
                    <% } %>
                  </td>
                  <td>
                    <strong><%= creature.name %></strong>
                  </td>
                  <td class="text-muted fst-italic"><%= creature.scientific_name || '-' %></td>
                  <td>
                    <span class="badge bg-info"><%= creature.category_name || 'Uncategorized' %></span>
                  </td>
                  <td>
                    <% if (creature.conservation_status) { %>
                      <%
                        let statusClass = 'secondary';
                        if (creature.conservation_status.includes('Endangered')) statusClass = 'danger';
                        else if (creature.conservation_status.includes('Vulnerable')) statusClass = 'warning';
                        else if (creature.conservation_status.includes('Least')) statusClass = 'success';
                      %>
                      <span class="badge bg-<%= statusClass %>"><%= creature.conservation_status %></span>
                    <% } else { %>
                      <span class="text-muted">-</span>
                    <% } %>
                  </td>
                  <td class="table-actions">
                    <a href="/gallery/<%= creature.id %>" class="btn btn-sm btn-outline-secondary" title="View">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="/admin/creatures/<%= creature.id %>/edit" class="btn btn-sm btn-outline-primary" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/admin/creatures/<%= creature.id %>/delete" method="POST" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete <%= creature.name %>?');">
                      <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-4">
      <a href="/admin" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>
  </div>

  <!-- Add Category Modal -->
  <div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/admin/categories" method="POST">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-folder-plus"></i> Add New Category</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Category Name *</label>
              <input type="text" name="name" class="form-control" required placeholder="e.g., Reptiles">
            </div>
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea name="description" class="form-control" rows="2" placeholder="Optional description"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Create Category</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
