<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Wildlife Gallery</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #2d5016;
      --secondary-color: #4a7c23;
      --accent-color: #8bc34a;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
      min-height: 100vh;
    }

    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
    }

    .hero-image {
      height: 400px;
      object-fit: cover;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .info-card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .info-item {
      padding: 15px;
      border-bottom: 1px solid #eee;
    }

    .info-item:last-child {
      border-bottom: none;
    }

    .info-icon {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .category-badge {
      display: inline-block;
      padding: 8px 20px;
      border-radius: 25px;
      font-weight: bold;
    }

    .category-animal {
      background: linear-gradient(135deg, #ff9800, #f57c00);
      color: white;
    }

    .category-bird {
      background: linear-gradient(135deg, #2196f3, #1976d2);
      color: white;
    }

    .rating-stars {
      color: #ffc107;
    }

    .feedback-card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.05);
      margin-bottom: 15px;
    }

    .feedback-form {
      border: none;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .star-rating {
      display: flex;
      gap: 5px;
      font-size: 1.5rem;
      cursor: pointer;
    }

    .star-rating i {
      color: #ddd;
      transition: color 0.2s;
    }

    .star-rating i.active,
    .star-rating i:hover,
    .star-rating i:hover ~ i {
      color: #ffc107;
    }

    .star-rating:hover i {
      color: #ddd;
    }

    .star-rating:hover i:hover,
    .star-rating:hover i:hover ~ i,
    .star-rating i.active {
      color: #ffc107;
    }

    .star-rating {
      direction: rtl;
      justify-content: flex-end;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
      border-radius: 25px;
      padding: 10px 30px;
    }

    .btn-outline-primary {
      color: var(--primary-color);
      border-color: var(--primary-color);
      border-radius: 25px;
    }

    .btn-outline-primary:hover {
      background: var(--primary-color);
      color: white;
    }

    /* Chat Widget Styles */
    .chat-widget {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 1000;
    }

    .chat-toggle {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
      color: white;
      font-size: 24px;
      cursor: pointer;
      box-shadow: 0 5px 20px rgba(45, 80, 22, 0.4);
      transition: transform 0.3s ease;
    }

    .chat-toggle:hover {
      transform: scale(1.1);
    }

    .chat-window {
      display: none;
      position: fixed;
      bottom: 90px;
      right: 20px;
      width: 380px;
      height: 500px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      flex-direction: column;
      overflow: hidden;
    }

    .chat-window.open {
      display: flex;
    }

    .chat-header {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      padding: 15px 20px;
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 15px;
      background: #f8f9fa;
    }

    .chat-message {
      margin-bottom: 15px;
      display: flex;
    }

    .chat-message.user {
      justify-content: flex-end;
    }

    .chat-message .bubble {
      max-width: 80%;
      padding: 12px 16px;
      border-radius: 18px;
      font-size: 14px;
      line-height: 1.4;
    }

    .chat-message.user .bubble {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      border-bottom-right-radius: 4px;
    }

    .chat-message.bot .bubble {
      background: white;
      color: #333;
      border-bottom-left-radius: 4px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .chat-input-area {
      padding: 15px;
      background: white;
      border-top: 1px solid #eee;
      display: flex;
      gap: 10px;
    }

    .chat-input-area input {
      flex: 1;
      border: 1px solid #ddd;
      border-radius: 25px;
      padding: 10px 20px;
      outline: none;
    }

    .chat-input-area button {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
      color: white;
      cursor: pointer;
    }

    .typing-indicator {
      display: flex;
      gap: 4px;
      padding: 12px 16px;
    }

    .typing-indicator span {
      width: 8px;
      height: 8px;
      background: #ccc;
      border-radius: 50%;
      animation: bounce 1.4s infinite ease-in-out both;
    }

    .typing-indicator span:nth-child(1) { animation-delay: -0.32s; }
    .typing-indicator span:nth-child(2) { animation-delay: -0.16s; }

    @keyframes bounce {
      0%, 80%, 100% { transform: scale(0); }
      40% { transform: scale(1); }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/gallery">
        <i class="bi bi-feather me-2"></i>Wildlife Gallery
      </a>
      <div class="navbar-nav ms-auto">
        <span class="nav-link">
          <i class="bi bi-person-circle me-1"></i>Welcome, <%= user.username %>
        </span>
        <a class="nav-link" href="/auth/logout">
          <i class="bi bi-box-arrow-right me-1"></i>Logout
        </a>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <!-- Back Button -->
    <a href="/gallery" class="btn btn-outline-primary mb-4">
      <i class="bi bi-arrow-left me-2"></i>Back to Gallery
    </a>

    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="row">
      <!-- Main Content -->
      <div class="col-lg-8">
        <!-- Hero Image -->
        <img src="<%= creature.image_url || 'https://placehold.co/800x400/2d5016/white?text=' + encodeURIComponent(creature.name) %>"
             class="img-fluid hero-image w-100 mb-4"
             alt="<%= creature.name %>"
             onerror="this.src='https://placehold.co/800x400/2d5016/white?text=<%= encodeURIComponent(creature.name) %>'">

        <!-- Title and Badge -->
        <div class="d-flex align-items-center justify-content-between mb-3">
          <div>
            <span class="category-badge category-<%= creature.category_name.toLowerCase() === 'birds' ? 'bird' : 'animal' %> mb-2">
              <%= creature.category_name %>
            </span>
            <h1 class="display-5 fw-bold mt-2"><%= creature.name %></h1>
            <p class="text-muted fst-italic"><%= creature.scientific_name || 'Scientific name unknown' %></p>
          </div>
          <div class="text-end">
            <div class="rating-stars fs-4">
              <% for (let i = 1; i <= 5; i++) { %>
                <i class="bi bi-star<%= i <= Math.round(avgRating) ? '-fill' : '' %>"></i>
              <% } %>
            </div>
            <small class="text-muted"><%= avgRating %> (<%= feedbackCount %> reviews)</small>
          </div>
        </div>

        <!-- Description -->
        <div class="card info-card mb-4">
          <div class="card-body">
            <h5 class="card-title fw-bold mb-3">
              <i class="bi bi-info-circle me-2" style="color: var(--primary-color);"></i>About
            </h5>
            <p class="card-text"><%= creature.description || 'No description available.' %></p>
          </div>
        </div>

        <!-- Fun Facts -->
        <% if (creature.fun_facts) { %>
        <div class="card info-card mb-4">
          <div class="card-body">
            <h5 class="card-title fw-bold mb-3">
              <i class="bi bi-lightbulb me-2" style="color: #ffc107;"></i>Fun Facts
            </h5>
            <p class="card-text"><%= creature.fun_facts %></p>
          </div>
        </div>
        <% } %>

        <!-- Feedback Section -->
        <div class="card feedback-form mb-4">
          <div class="card-body">
            <h5 class="card-title fw-bold mb-3">
              <i class="bi bi-chat-dots me-2" style="color: var(--primary-color);"></i>Leave Your Feedback
            </h5>
            <form action="/feedback" method="POST">
              <input type="hidden" name="creatureId" value="<%= creature.id %>">

              <div class="mb-3">
                <label class="form-label">Your Rating</label>
                <div class="star-rating" id="starRating">
                  <i class="bi bi-star" data-rating="5"></i>
                  <i class="bi bi-star" data-rating="4"></i>
                  <i class="bi bi-star" data-rating="3"></i>
                  <i class="bi bi-star" data-rating="2"></i>
                  <i class="bi bi-star" data-rating="1"></i>
                </div>
                <input type="hidden" name="rating" id="ratingInput" value="5" required>
              </div>

              <div class="mb-3">
                <label for="comment" class="form-label">Your Comment</label>
                <textarea class="form-control" id="comment" name="comment" rows="3"
                          placeholder="Share your thoughts about this <%= creature.category_name.toLowerCase() === 'birds' ? 'bird' : 'animal' %>..."
                          required></textarea>
              </div>

              <button type="submit" class="btn btn-primary">
                <i class="bi bi-send me-2"></i>Submit Feedback
              </button>
            </form>
          </div>
        </div>

        <!-- Previous Feedback -->
        <h5 class="fw-bold mb-3">
          <i class="bi bi-people me-2" style="color: var(--primary-color);"></i>Community Feedback (<%= feedback.length %>)
        </h5>

        <% if (feedback.length === 0) { %>
          <div class="text-center py-4">
            <i class="bi bi-chat-square-text display-4 text-muted"></i>
            <p class="text-muted mt-2">Be the first to leave feedback!</p>
          </div>
        <% } else { %>
          <% feedback.forEach(function(fb) { %>
            <div class="card feedback-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <div class="d-flex align-items-center mb-2">
                      <span class="fw-bold me-2">
                        <i class="bi bi-person-circle me-1"></i><%= fb.username %>
                      </span>
                      <span class="rating-stars small">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <i class="bi bi-star<%= i <= fb.rating ? '-fill' : '' %>"></i>
                        <% } %>
                      </span>
                    </div>
                    <p class="mb-1"><%= fb.comment %></p>
                    <small class="text-muted">
                      <i class="bi bi-clock me-1"></i><%= new Date(fb.created_at).toLocaleDateString() %>
                    </small>
                  </div>
                  <% if (fb.user_id === user.id) { %>
                    <form action="/feedback/delete/<%= fb.id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this feedback?')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <div class="card info-card sticky-top" style="top: 20px;">
          <div class="card-header bg-white border-0 pt-4">
            <h5 class="fw-bold mb-0">
              <i class="bi bi-card-list me-2" style="color: var(--primary-color);"></i>Quick Facts
            </h5>
          </div>
          <div class="card-body p-0">
            <div class="info-item d-flex align-items-center">
              <div class="info-icon bg-success bg-opacity-10 text-success me-3">
                <i class="bi bi-geo-alt"></i>
              </div>
              <div>
                <small class="text-muted">Habitat</small>
                <p class="mb-0 fw-medium"><%= creature.habitat || 'Unknown' %></p>
              </div>
            </div>

            <div class="info-item d-flex align-items-center">
              <div class="info-icon bg-warning bg-opacity-10 text-warning me-3">
                <i class="bi bi-egg-fried"></i>
              </div>
              <div>
                <small class="text-muted">Diet</small>
                <p class="mb-0 fw-medium"><%= creature.diet || 'Unknown' %></p>
              </div>
            </div>

            <div class="info-item d-flex align-items-center">
              <div class="info-icon bg-info bg-opacity-10 text-info me-3">
                <i class="bi bi-hourglass-split"></i>
              </div>
              <div>
                <small class="text-muted">Lifespan</small>
                <p class="mb-0 fw-medium"><%= creature.lifespan || 'Unknown' %></p>
              </div>
            </div>

            <div class="info-item d-flex align-items-center">
              <div class="info-icon bg-danger bg-opacity-10 text-danger me-3">
                <i class="bi bi-shield-exclamation"></i>
              </div>
              <div>
                <small class="text-muted">Conservation Status</small>
                <p class="mb-0 fw-medium"><%= creature.conservation_status || 'Unknown' %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chat Widget -->
  <div class="chat-widget">
    <div class="chat-window" id="chatWindow">
      <div class="chat-header">
        <span><i class="bi bi-robot me-2"></i>Wildlife Assistant</span>
        <button onclick="toggleChat()" style="background: none; border: none; color: white; font-size: 20px;">
          <i class="bi bi-x-lg"></i>
        </button>
      </div>
      <div class="chat-messages" id="chatMessages">
        <div class="chat-message bot">
          <div class="bubble">
            Hello! I can tell you more about <strong><%= creature.name %></strong> or any other animal. What would you like to know?
          </div>
        </div>
      </div>
      <div class="chat-input-area">
        <input type="text" id="chatInput" placeholder="Ask about <%= creature.name %>..." onkeypress="handleKeyPress(event)">
        <button onclick="sendMessage()">
          <i class="bi bi-send"></i>
        </button>
      </div>
    </div>
    <button class="chat-toggle" onclick="toggleChat()" id="chatToggle">
      <i class="bi bi-chat-dots"></i>
    </button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Star Rating
    const stars = document.querySelectorAll('.star-rating i');
    const ratingInput = document.getElementById('ratingInput');

    stars.forEach(star => {
      star.addEventListener('click', () => {
        const rating = star.dataset.rating;
        ratingInput.value = rating;

        stars.forEach(s => {
          if (s.dataset.rating <= rating) {
            s.classList.add('active');
            s.classList.remove('bi-star');
            s.classList.add('bi-star-fill');
          } else {
            s.classList.remove('active');
            s.classList.remove('bi-star-fill');
            s.classList.add('bi-star');
          }
        });
      });
    });

    // Initialize with 5 stars
    stars.forEach(s => {
      s.classList.add('active');
      s.classList.remove('bi-star');
      s.classList.add('bi-star-fill');
    });

    // Chat Widget JavaScript
    let chatOpen = false;
    const creatureName = '<%= creature.name %>';

    function toggleChat() {
      chatOpen = !chatOpen;
      document.getElementById('chatWindow').classList.toggle('open', chatOpen);
      document.getElementById('chatToggle').innerHTML = chatOpen
        ? '<i class="bi bi-x-lg"></i>'
        : '<i class="bi bi-chat-dots"></i>';
    }

    function handleKeyPress(e) {
      if (e.key === 'Enter') {
        sendMessage();
      }
    }

    async function sendMessage() {
      const input = document.getElementById('chatInput');
      const message = input.value.trim();
      if (!message) return;

      addMessage(message, 'user');
      input.value = '';
      showTyping();

      try {
        const response = await fetch('/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            message,
            context: `Currently viewing: ${creatureName}`
          })
        });

        const data = await response.json();
        hideTyping();

        if (data.error) {
          addMessage(data.error, 'bot');
        } else {
          addMessage(data.reply, 'bot');
        }
      } catch (error) {
        hideTyping();
        addMessage('Sorry, there was an error. Please try again.', 'bot');
      }
    }

    function addMessage(text, type) {
      const messagesContainer = document.getElementById('chatMessages');
      const messageDiv = document.createElement('div');
      messageDiv.className = `chat-message ${type}`;
      messageDiv.innerHTML = `<div class="bubble">${escapeHtml(text)}</div>`;
      messagesContainer.appendChild(messageDiv);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function showTyping() {
      const messagesContainer = document.getElementById('chatMessages');
      const typingDiv = document.createElement('div');
      typingDiv.className = 'chat-message bot';
      typingDiv.id = 'typingIndicator';
      typingDiv.innerHTML = '<div class="bubble typing-indicator"><span></span><span></span><span></span></div>';
      messagesContainer.appendChild(typingDiv);
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function hideTyping() {
      const typing = document.getElementById('typingIndicator');
      if (typing) typing.remove();
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
  </script>
</body>
</html>
